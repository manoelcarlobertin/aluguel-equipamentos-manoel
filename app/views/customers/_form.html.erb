<section class="container-fluid ">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h6>Formul√°rio Simples para Cadastrar Novos Clientes</h6>
        </div>
        <div class="card">
          <div class="card-body">
            <%= simple_form_for(@customer) do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

              <div class="row">
                <div class="ml-4 col-12 col-md-8">
                  <%= f.input :name %>
                </div>
                <div class="col-12 col-md-4">
                  <%= f.input :dob, max: Date.today, html5: true %>
                </div>
              </div>
                <%= f.input :email %>
                <div class="row">
                  <div class="col-12 col-md-3">
                    <%= f.input :indentification %>
                  </div>
                  <div class="col-12 col-md-3">
                    <%= f.input :mobile_phone %>
                  </div>
                </div>

                <%= f.input :address %>
                <div class="card-footer d-flex justify-content-between">
                  <%= link_to "Voltar", customers_path, class: "btn btn-secondary"%>
                  <%= f.button :button, class:"btn btn-primary" %>
                </div>
             <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
