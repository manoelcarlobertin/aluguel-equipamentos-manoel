<p style="color: green"><%= notice %></p>
<%= render "toolbar" %>
<% content_for :title, "Meus Clientes" %>

<div class="container-fluid">
  <div class="d-flex align-items-center">
    <h3 class="flex-grow-1">Lista de Clientes </h3>
    <div class="input-group ms-3" style="width: 550px;">

    </div>
    <div class="list-actions">

        <%= link_to "Novo", new_customer_path, class:"ms-3 btn btn-primary" %>

    </div>
  </div>

  <section class="">
    <div class="row">
      <div class="col">
        <table class="table table-bordered table-striped">
          <thead class="blue-header" >
            <tr data-bs-theme="dark">
              <th scope="col">Nome</th>
              <th scope="col">Email</th>
              <th scope="col">Cpf / Cnpj</th>
              <th scope="col">Endereço</th>
              <th scope="col">Telefone</th>
              <th scope="col">Dt Nascimento</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
          <tbody>
            <!-- Exemplo de cliente cadastrado -->
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.indentification %></td>
                <td><%= customer.address %></td>
                <td><%= customer.mobile_phone %></td>
                <td><%= customer.dob.strftime("%d/%m/%Y") %></td>
                <td class="d-flex justify-content-between">
                  <%= link_to edit_customer_path(customer), title: "Editar", alt: "edit"  do %>
                    <%= image_tag "icons/gray/edit.svg" %>
                  <% end %>
                  <%= link_to customer, method: :delete, data: {
                        turbo_method: :delete, turbo_confirm: 'Você deseja APAGAR esse registro?' },
                        class: "text-red-500 hover:underline", title: "Apagar", alt: "delete"   do  %>
                    <%= image_tag "icons/gray/close.svg" %>
                  <% end %>
                </td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </section>

</div>
