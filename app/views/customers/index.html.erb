<!-- Mensagem de notificação -->
<% if notice.present? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<!-- Título da página -->
<% content_for :title, "Clientes" %>

<h1 class="page-title">Lista de Clientes</h1>

<!-- Lista de clientes em cards -->
<div id="customers" class="customer-list">
  <% if @customers.any? %>
    <% @customers.each do |customer| %>
      <div class="customer-card">
       <h6 class="customer-name">Nome: <strong><%= format_customer_name(customer) %></strong></h6>  <%# Usando o helper %>
       <h6 class="customer-name">Nome: <strong><%= customer.safe_name %></strong></h6>  <%# Usando o método do model %>
        <p class="customer-email"><strong>Email:</strong> <%= customer.email %></p>
        <p class="customer-phone"><strong>Telefone:</strong> <%= customer.mobile_phone %></p>
        <div class="customer-actions">
          <%= link_to "Detalhes", customer, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="no-customers">Nenhum cliente cadastrado.</p>
  <% end %>
</div>

<!-- Link para cadastrar novo cliente -->
<div class="new-customer-link">
  <%= link_to "Cadastrar Novo Cliente", new_customer_path, class: "btn btn-primary" %>
</div>
