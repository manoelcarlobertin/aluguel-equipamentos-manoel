# Gerenciamento de paginação
gem "kaminari"

# Framework CSS Bootstrap (versão 5.0 ou superior)
gem "bootstrap", "~> 5.0"

# Compilador Sass para Rails
gem "sassc-rails"

# Processamento de jobs em background
